{% extends 'base.htm.twig' %}

{% block main %}
    <div class="table-container">
        <table border="1" class="table">
            <thead class="thead-dark">
            <tr>
                <th>Customer Name</th>
                <th>Car Make</th>
                <th>Car Model</th>
                <th>Options</th>
            </tr>
            {% for sale in sales %}
                <tr>
                    <td>{{ sale.name }}</td>
                    <td>{{ sale.make }}</td>
                    <td>{{ sale.model }}</td>
                    <td><a href="{{ path('view_sale', {'id': sale.id}) }}">View</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
