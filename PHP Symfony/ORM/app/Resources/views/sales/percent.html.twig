<table border="1">
    <tr>
        <th>Customer Name</th>
        <th>Car Make</th>
        <th>Car Model</th>
        <th>Discount</th>
        <th>Options</th>
    </tr>
    {% for sale in sales %}
        <tr>
            <td>{{ sale.name }}</td>
            <td>{{ sale.make }}</td>
            <td>{{ sale.model }}</td>
            <td>{{ sale.discount }}</td>
            <td><a href="{{ path('view_sale', {'id': sale.id}) }}">view</a> </td>
        </tr>
    {% endfor %}
</table>
<a href="{{ path('index') }}">Home</a>