{% extends 'base.htm.twig' %}

{% block main %}
    <div class="table-container">
        <table border="1" class="table">
            <thead class="thead-light">
            <tr>
                <th>Customer Name</th>
                <td>{{ sale.name }}</td>
            </tr>
            <tr>
                <th>Car make</th>
                <td>{{ sale.make }}</td>
            </tr>
            <tr>
                <th>Car Model</th>
                <td>{{ sale.model }}</td>
            </tr>
            <tr>
                <th>Car Price</th>
                <td>{{ sale.price|round(2) }}</td>
            </tr>
            <tr>
                <th>Car Price With Discount</th>
                <td>{{ sale.priceWithDiscount|round(2) }}</td>
            </tr>
        </table>
    </div>
{% endblock %}
