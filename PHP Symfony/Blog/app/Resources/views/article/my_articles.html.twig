{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-12">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>

                        <p>
                            {{ article.content }}
                        </p>


                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-success btn-xs" href="{{ path('article_edit', {'id':article.id}) }}">Edit</a>
                                <a class="btn btn-danger btn-xs" href="{{ path('article_delete', {'id':article.id}) }}">Delete</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}
            <a class="btn btn-default btn-xs" href="{{ path('blog_index') }}">Home &raquo;</a>
        </div>
    </div>
{% endblock %}


